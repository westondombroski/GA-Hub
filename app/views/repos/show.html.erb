<br>
<div class="container-fluid">
	<div class="col-xs-8">
		<div class="thumbnail">
			<span> <%= link_to "GitHub", "https://github.com/sf-wdi-labs/#{@repo.name}", target: "_blank", class: "btn btn-info"%></span>
			<h1 class="header-repos"><%= @repo.name %> </h1>
			<hr>
			<h4><%= raw @repo.content%></h4>
		</div>
	</div>
	<% if current_user %>
	<div class="col-xs-4">
		<div class="thumbnail">
			<%= render partial: "comments/template", locals: {commentable: @repo, new_comment: @comment} %>
		</div>
	</div>
	<% end %>
</div>
